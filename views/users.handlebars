        </ul>
    </div>
  {{/if}}

  {{#if user}}
    <div class="user-content-single">
      <h3>User</h3>
        <ul>
          {{#each user}}
            {{> user-block}}
          {{/each}}
        </ul>
    </div>
  {{/if}}

