{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

  <header class="header">
    <h1>Register Today</h1>
  </header>

<div class="formcontainer">
  <form id="form-new-registration">
    <div>
      <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="usernamne" name="user_name" placeholder="Name..." class="form-control" maxlength="50" required autofocus>
      </div>
      <div class="form-group">
        <label for="useremail">Email</label>
        <input type="text" id="useremail" name="user_email" placeholder="Email..." class="form-control" maxlength="128" required>
      </div>
      <div class="form-group">
          <label for="userpassword">Password</label>
          <input type="password" id="userpassword" name="user_password" placeholder="Password..." class="form-control" required>
      </div>
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
</div>
